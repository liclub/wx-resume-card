.resume-btn {
  display: flex;
  justify-content: left;
  align-items: center;
  height: 200rpx;
  width: 92%;
  margin-left: 4%;
  font-size: 26rpx;
  flex-direction: row;
  flex-wrap: wrap;
}
.resume-btn-col {
  width: 25%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  margin-top: 40rpx;
}
.resume-btn-col .iconfont {
  font-size: 50rpx;
}
.btn-name {
  font-size: 28rpx;
}

button {
  font-size: 28rpx;
  background-color: #fff;
  border: none;
  padding: 0;
  margin: 0;
  line-height: 1;
  -webkit-tap-highlight-color: #fff !important;
  cursor: none;
}

button::after {
  border: none;
}