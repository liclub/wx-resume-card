.userinfo {  
  position: relative;
  width: 100%;
  height: 190rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 16px;  
  border-bottom: 12rpx solid #d6d6d6;
}  
  
.userinfo-avatar {  
  overflow: hidden;
  display: block;
  width: 100rpx;
  height: 100rpx;
  margin: 30rpx;
  border-radius: 26rpx;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}  
  
page {
  overflow: hidden;
}